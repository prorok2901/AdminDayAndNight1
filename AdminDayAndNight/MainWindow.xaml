<Window x:Class="AdminDayAndNight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminDayAndNight"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush x:Name="StartImage" ImageSource="/Image/BackgroundImage.png"/>
    </Window.Background>
    <Grid>
        <Grid Margin="0,0,305,367" x:Name="FirstStart" Visibility="Hidden">
            <Border CornerRadius="13" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#baac8b" Width="460">
                <TextBlock Text="♠Добро пожаловать в первый раз♥" FontSize="24" HorizontalAlignment="Left" FontStyle="Italic" FontFamily="Ink Free" Width="450" Margin="20,0,0,0"/>
            </Border>
        </Grid>
        <Frame x:Name="Opupet" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
